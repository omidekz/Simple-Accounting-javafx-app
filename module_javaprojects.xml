<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javaprojects" default="compile.module.javaprojects">
  <dirname property="module.javaprojects.basedir" file="${ant.file.module_javaprojects}"/>
  
  <property name="module.jdk.home.javaprojects" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javaprojects" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javaprojects" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javaprojects" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="javaprojects.output.dir" value="${module.javaprojects.basedir}/out/production/JavaProjects"/>
  <property name="javaprojects.testoutput.dir" value="${module.javaprojects.basedir}/out/test/JavaProjects"/>
  
  <path id="javaprojects.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javaprojects.module.production.classpath">
    <path refid="${module.jdk.classpath.javaprojects}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.com.jfoenix:jfoenix:9.0.8.classpath"/>
  </path>
  
  <path id="javaprojects.runtime.production.module.classpath">
    <pathelement location="${javaprojects.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.com.jfoenix:jfoenix:9.0.8.classpath"/>
  </path>
  
  <path id="javaprojects.module.classpath">
    <path refid="${module.jdk.classpath.javaprojects}"/>
    <pathelement location="${javaprojects.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.com.jfoenix:jfoenix:9.0.8.classpath"/>
  </path>
  
  <path id="javaprojects.runtime.module.classpath">
    <pathelement location="${javaprojects.testoutput.dir}"/>
    <pathelement location="${javaprojects.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.com.jfoenix:jfoenix:9.0.8.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javaprojects">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javaprojects">
    <patternset refid="excluded.from.module.javaprojects"/>
  </patternset>
  
  <path id="javaprojects.module.sourcepath">
    <dirset dir="${module.javaprojects.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javaprojects" depends="compile.module.javaprojects.production,compile.module.javaprojects.tests" description="Compile module JavaProjects"/>
  
  <target name="compile.module.javaprojects.production" depends="register.custom.compilers" description="Compile module JavaProjects; production classes">
    <mkdir dir="${javaprojects.output.dir}"/>
    <javac2 destdir="${javaprojects.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javaprojects}/javac">
      <compilerarg line="${compiler.args.javaprojects}"/>
      <bootclasspath refid="javaprojects.module.bootclasspath"/>
      <classpath refid="javaprojects.module.production.classpath"/>
      <src refid="javaprojects.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javaprojects"/>
    </javac2>
    
    <copy todir="${javaprojects.output.dir}">
      <fileset dir="${module.javaprojects.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javaprojects.tests" depends="register.custom.compilers,compile.module.javaprojects.production" description="compile module JavaProjects; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javaprojects" description="cleanup module">
    <delete dir="${javaprojects.output.dir}"/>
    <delete dir="${javaprojects.testoutput.dir}"/>
  </target>
</project>